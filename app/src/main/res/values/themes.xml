<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DecadeOfMovies" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="fontFamily">@font/aclonica</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:background">@color/electric_blue</item>
    </style>

    <style name="RoundedCornersImageStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>

    <style name="SplashTextStyle">
        <item name="fontFamily">@font/aclonica</item>
        <item name="textAllCaps">true</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="HeaderTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/aclonica</item>
        <item name="android:textSize">20sp</item>
    </style>
</resources>